{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {
        "editor.formatOnSave": true,
        "files.insertFinalNewline": true
      },
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        // "zenml.zenml-vscode",
        "/workspaces/vscode-quickstart/.devcontainer/extensions/zenml-vscode-quickstart-0.0.1.vsix"
      ]
    },
    "codespaces": {
      "openFiles": ["media/firstSteps.md", "README.md"]
    }
  },
  "containerEnv": {
    "PYTHONPATH": "/home/codespace/.vscode-server/extensions/zenml.zenml-vscode-quickstart-0.0.1/zenmlQuickstart/quickstartModules:/home/codespace/.vscode-remote/extensions/zenml.zenml-vscode-quickstart-0.0.1/zenmlQuickstart/quickstartModules"
  },
  // "onCreateCommand": "pip install zenml && zenml integration install sklearn -y && zenml init && zenml stack set default"
  "onCreateCommand": "pip install uv pip && uv pip install --system zenml && zenml integration install sklearn -y --uv && zenml init && zenml stack set default"
}
